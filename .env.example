# --- Server ---
PORT=8787
CORS_ORIGIN=*
# 静的配信するフロントのパスは server.js 側で ../web/public に設定済み

# --- OpenSky ---
# モード: mock（デモ用）/ opensky（本番）
OPEN_SKY_MODE=mock
OPEN_SKY_BASE_URL=https://opensky-network.org/api

# 匿名で良ければ未設定のままでOK（ただしレート制限が厳しめ）
OPEN_SKY_USERNAME=
OPEN_SKY_PASSWORD=

# （将来用）OAuth2 クライアント資格情報
OPEN_SKY_OAUTH_TOKEN_URL=
OPEN_SKY_CLIENT_ID=
OPEN_SKY_CLIENT_SECRET=

# --- Hotcells ---
# 広域スキャンのデフォルト範囲（関東一帯の目安）
HOTSCAN_LAMIN=35.2
HOTSCAN_LAMAX=36.2
HOTSCAN_LOMIN=139.2
HOTSCAN_LOMAX=140.6
HOTSCAN_CELL_SIZE=0.02
HOTSCAN_TOPK=5

# Cesium ion (PLATEAU: Japan 3D Buildings)
ION_TOKEN=
ION_ASSET_ID=
# Local 3D Tiles fallback (relative to server)
PLATEAU_LOCAL_TILESET=../web/public/tiles/plateau/tileset.json
